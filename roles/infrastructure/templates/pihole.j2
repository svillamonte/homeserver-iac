version: "3"

services:
  pihole:
    container_name: pihole
    image: pihole/pihole:latest
    ports:
      - "53:53/tcp"
      - "53:53/udp"
    environment:
      TZ: 'Pacific/Auckland'
      WEBPASSWORD: '{{ password | password_hash('sha512') }}'
    dns:
      - 127.0.0.1
      - 8.8.8.8
    volumes:
      - '/home/walden2/pihole/etc-pihole:/etc/pihole'
      - '/home/walden2/pihole/etc-dnsmasq.d:/etc/dnsmasq.d'
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.pihole.rule=Host(`pihole.internal.{{ domain }}`)"
      - "traefik.http.services.pihole.loadbalancer.server.port=80"
      - "traefik.http.routers.pihole.entrypoints=websecure"
      - "traefik.http.routers.pihole.tls.certResolver=httpsResolver"
      - "traefik.http.routers.pihole.middlewares=localwhitelist@file"
    restart: unless-stopped
    networks:
      - traefik
      
networks:
  traefik:
    external: true
    